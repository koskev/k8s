{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "flux": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.ya?ml$"],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "repository:\\s?(?<depName>.*?)\\s?tag:\\s?(?<currentValue>[\\w+\\.\\-]*)"
      ]
    }
  ]
}
