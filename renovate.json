{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "argocd": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "flux": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.ya?ml$"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "image:\\s*repository:\\s?(?<depName>.*?)\\s*tag:\\s?(?<currentValue>[\\w+\\.\\-]*)"
      ]
    },
    {
      "description": "Helm repos for all strings that start with 'https'",
      "customType": "regex",
      "fileMatch": [
        "images.libsonnet"
      ],
      "datasourceTemplate": "helm",
      "matchStrings": [
        "chart:\\s?'(?<depName>.*?)',\\s*repoURL:\\s?'(?<registryUrl>https.*?)',\\s*targetRevision:\\s?'(?<currentValue>[\\w+\\.\\-]*)',"
      ]
    },
    {
      "description": "Helm OCI repos for all strings that do not contain a ':'",
      "customType": "regex",
      "fileMatch": [
        "images.libsonnet"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "chart:\\s?'(?<depName>.*?)',\\s*repoURL:\\s?'(?<registryUrl>[^:].*)',\\s*targetRevision:\\s?'(?<currentValue>[\\w+\\.\\-]*)',"
      ],
      "packageNameTemplate": "{{registryUrl}}/{{depName}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "images.libsonnet"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "image:\\s?'(?<depName>.*?)',\\s*tag:\\s?'(?<currentValue>[\\w+\\.\\-]*)',"
      ]
    }
  ]
}
